{% extends "layout/html.twig" %}
{% block extrastyles %}
    <link rel="stylesheet" type="text/css" href="{{ Url.media('media/css/exhibits.css') }}" />
{% endblock %}
{% block extrascripts %}
    <script type="text/javascript" src="{{ Url.media('media/js/exhibits.js') }}"></script>
{% endblock %}
{% block content %}
    <div class="item-list wrap">
        <div class="div100">{% include 'layout/bread-crumbs.twig' %}</div>
        
        <div id="album-left">
            <div class="div100"><h1>{{ item.title }}</h1></div>
            
            <div class="exhibit-content" class="text">
                <div id="exhibit-announce">
                    <div></div>
                    {{ item.description|striptags }}
                </div>
                
                <div id="exhibit-main-photo">
                    <div class="div100"><img src="{{ Url.media('images/w620/'~item.image.file_path) }}" width="620" alt="{{ item.title }}" /></div>
                    {# <div id="exhibit-main-photo-name">Самый лучший плов невозможно приготовить без казана.</div> #}
                </div>
                
                <div id="exhibit-text">
                    {{ item.text|raw }}
                </div>
                
                <div id="exhibit-likes">
                    <div class="likes-block-content">
                        <script type="text/javascript">(function () {
                            if (window.pluso) if (typeof window.pluso.start == "function") return;
                            var d = document, s = d.createElement('script'), g = 'getElementsByTagName';
                            s.type = 'text/javascript';
                            s.charset = 'UTF-8';
                            s.async = true;
                            s.src = ('https:' == d.location.protocol ? 'https' : 'http') + '://share.pluso.ru/pluso-like.js';
                            var h = d[g]('head')[0] || d[g]('body')[0];
                            h.appendChild(s);
                        })();</script>
                        <div class="pluso" data-options="small,square,line,horizontal,nocounter,theme=08" data-services="vkontakte,facebook,odnoklassniki,twitter,yandex,livejournal,liveinternet,moimir" data-background="transparent"></div>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="album-right">
            <div class="other-exhibits">
                <div class="other-image">
                    <img src="{{ Url.media('media/images/v1/kazan2.jpg') }}" width="220" alt="{{ item.title }}" />
                </div>
                <div class="other-title">Всегда ли казаны были из чугуна? Конечно, нет. Первые казаны изготавливались из меди, затем бронзы и, относительно недавно, их стали отливать из более сложных сплавов.</div>
            </div>
        </div>
    </div>
{% endblock content %}
