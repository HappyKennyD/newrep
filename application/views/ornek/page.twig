{% extends "layout/ornek.twig" %}
{% block content %}
    <div class="wrap">
        <div id="breadcrumbs">
            {% include 'layout/bread-crumbs.twig' %}
        </div>

        <div id="page-title">
            <h1>{{ item.title }}</h1>
        </div>

        <div id="page-content">
            <div id="page-announce">{{ item.desc }}</div>
            <div id="page-text">
                <p style="float: right; margin-left: 30px; margin-bottom: 0;">
                    <img src="{{ Url.media('/images/w449-cct-si/'~item.picture.file_path, TRUE) }}"  alt="" />
                <p>{{ item.text|raw }}
            </div>
        </div>

        <div id="page-socials">
            <script type="text/javascript">(function () {
                    if (window.pluso) if (typeof window.pluso.start == "function") return;
                    var d = document, s = d.createElement('script'), g = 'getElementsByTagName';
                    s.type = 'text/javascript';
                    s.charset = 'UTF-8';
                    s.async = true;
                    s.src = ('https:' == d.location.protocol ? 'https' : 'http') + '://share.pluso.ru/pluso-like.js';
                    var h = d[g]('head')[0] || d[g]('body')[0];
                    h.appendChild(s);
                })();</script>
            <div class="pluso" data-options="small,square,line,horizontal,nocounter,theme=08" data-services="vkontakte,facebook,odnoklassniki,twitter,yandex,livejournal,liveinternet,moimir" data-background="transparent"></div>
        </div>
    </div>

    <div id="padd"></div>
{% endblock content %}