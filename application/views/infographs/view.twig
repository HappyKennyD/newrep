{% extends "layout/html.twig" %}
{% block extrastyles %}
    <link rel="stylesheet" type="text/css" href="{{ Url.media('media/css/infographs.css') }}" />
{% endblock %}
{% block extrascripts %}
    <script type="text/javascript" src="{{ Url.media('media/js/infograph.js') }}"></script>
{% endblock %}
{% block content %}
    <div class="text-page wrap">
        <div class="div100">{% include 'layout/bread-crumbs.twig' %}</div>
        <div class="div100"><h1>{{ infograph.title }}</h1></div>
        
        <div class="in-info-date">{{ Date.ru_date(infograph.date, 'd.m.Y') }}</div>
        
        <div class="infograph-big-photo">
            {% if infograph.picture.file_path is defined %}
                <div>
                    <a href="{{ Url.media(infograph.picture.file_path, TRUE) }}" class="zoom">
                        <img id="to_zoom" src="{{ Url.media('/images/w940/'~infograph.picture.file_path, TRUE) }}" alt="{{ "Preview"|i18n }}" title="" />
                    </a>
                </div>
            {% endif %}
        </div>
            
        <div class="infograph-likes">
            <div class="in-likes-block">
                <script type="text/javascript">(function () {
                    if (window.pluso) if (typeof window.pluso.start == "function") return;
                    var d = document, s = d.createElement('script'), g = 'getElementsByTagName';
                    s.type = 'text/javascript';
                    s.charset = 'UTF-8';
                    s.async = true;
                    s.src = ('https:' == d.location.protocol ? 'https' : 'http') + '://share.pluso.ru/pluso-like.js';
                    var h = d[g]('head')[0] || d[g]('body')[0];
                    h.appendChild(s);
                })();</script>
                <div class="pluso" data-options="small,square,line,horizontal,nocounter,theme=08" data-services="vkontakte,facebook,odnoklassniki,twitter,yandex,livejournal,liveinternet,moimir" data-background="transparent"></div>
            </div>
        </div>
    </div>
{% endblock content %}