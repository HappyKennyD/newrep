{% extends "layout/html.twig" %}
{% block extrastyles %}
    <link rel="stylesheet" type="text/css" href="{{ Url.media('media/css/photogallery.css') }}"/>
{% endblock %}
{% block extrascripts %}
    <script type="text/javascript" src="{{ Url.media('media/js/photogallery.js') }}"></script>
{% endblock extrascripts %}
{% block content %}
    <div id="scontent"></div>
    <div class="item-list wrap">
        {% include 'layout/bread-crumbs.twig' %}

        <div class="div100"><h1>{{ photoset.name() }}</h1></div>
        <p class="g-a-date">{{ Date.ru_date(photoset.date, 'd.m.Y') }} </p>
        <div id="gallery-thumbs">
            {% set i=1 %}
            {% for photo in attach %}
                <div class="p-thumb">
                    <img src="{{ Url.media('images/w184-h184-ccc-si/'~photo.photo.file_path) }}" alt="{{ photoset.name() }}.{{ "photo"|i18n }}-{{ i }}" title="{{ photoset.name() }}.{{ "photo"|i18n }}-{{ i }}"/>
                    <a href="{{ Url.media(photo.photo.file_path) }}" title="{{ photo.name }}" rel="fancy" oncontextmenu="return false"><span>{{ photo.name }}</span></a>
                </div>
                {% set i=i+1 %}
            {% endfor %}
        </div>

        <div class="gallery-clear"></div>
    </div>
{% endblock content %}