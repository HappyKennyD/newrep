{% extends "manage/layout/manage.twig" %}
{% block content %}
    <div class="page-header">
        <h3>Хронологическая лента</h3>
        <div class="clear"></div>
    </div>
    <div class="page">
        <table class="table table-striped">
        {% for item in list %}
            <tr>
                <td>
                    <div style="padding-left: {{ item.level }}em">
                        {{ item.name }}
                    </div>
                </td>
                <td>
                    <div class="btn-group pull-right">
                        {% if item.parent_id != 0 %}
                            <a class="btn btn-info btn-mini" href="{{ Url.media('manage/chronology/up/'~item.id) }}"><i class="icon-arrow-up"></i></a>
                            <a class="btn btn-info btn-mini" href="{{ Url.media('manage/chronology/down/'~item.id) }}"><i class="icon-arrow-down"></i></a>
                        {% endif %}
                        {% if item.lvl == 1 %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/chronology/new/'~item.id) }}"><i class="icon-plus"></i> Добавить эпоху</a>
                        {% endif %}
                        {% if item.lvl == 2 %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/chronology/one/'~item.id) }}"><i class="icon-plus"></i> Добавить лист отображения</a>
                        {% endif %}
                        {% if item.lvl == 3 %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/lines/list/'~item.id) }}"><i class="icon-pencil"></i> События</a>
                            <a class="btn btn-mini" href="{{ Url.media('manage/chronology/new/'~item.id) }}"><i class="icon-plus"></i> Добавить период</a>
                        {% endif %}
                        <a class="btn btn-mini" href="{{ Url.media('manage/chronology/edit/'~item.id) }}"><i class="icon-edit"></i> Редактировать</a>
                        <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/chronology/delete/'~item.id) }}"><i class="icon-remove icon-white"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
{% endblock content %}