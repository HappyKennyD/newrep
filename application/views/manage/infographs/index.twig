{% extends "manage/layout/manage.twig" %}
{% block content %}
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-success" href="{{ Url.media('manage/infographs/edit') }}"><i class="icon-plus"></i> {{ "Add"|i18n }}</a>
        </div>
        <div class="clear"></div>
    </div>
    <div class="page">
        {% for item in infographs %}
            <div class="well well-small">
                <div class="text">
                    <div class="date">
                        <span class="btn-group pull-right">
                            {% if not loop.first %}
                                <a class="btn btn-success btn-mini" href="{{ Url.media('manage/infographs/up/' ~item.id ~ '') }}"><i class="icon-arrow-up"></i></a>
                            {% endif %}
                            {% if not loop.last %}
                                <a class="btn btn-danger btn-mini" href="{{ Url.media('manage/infographs/down/' ~item.id ~ '') }}"><i class="icon-arrow-down"></i></a>
                            {% endif %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/infographs/view/'~item.id) }}"><i class="icon-eye-open"> </i> Просмотр</a>
                            <a class="btn btn-mini" href="{{ Url.media('manage/infographs/edit/'~item.id) }}"><i class="icon-edit"> </i> Редактировать</a>
                            {% if item.published %}
                                <a class="btn btn-mini btn-warning" href="{{ Url.media('manage/infographs/published/'~item.id) }}"><i class="icon-eye-close"> </i> Скрыть</a>
                            {% else %}
                                <a class="btn btn-mini btn-success" href="{{ Url.media('manage/infographs/published/'~item.id) }}"><i class="icon-eye-open"> </i> Опубликовать</a>
                            {% endif %}
                            <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/infographs/delete/'~item.id) }}"><i class="icon-remove"> </i></a>
                        </span>
                        <div class="pull-left">{{ Date.ru_date(item.date, 'd F Y') }} —
                            <a class="link" href="{{ Url.media('manage/infographs/view/'~item.id) }}">{{ item.title }}</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        {% endfor %}

        {{ paginate|raw }}

    </div>
{% endblock content %}