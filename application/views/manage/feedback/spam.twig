{% extends "manage/layout/manage.twig" %}
{% block content %}
    <form action="" style="margin:0" method="post">
        <input type="hidden" value="{{ token }}" name="token">
        <div class="modal-header">
            <a type="button" href="{{ return }}" class="close">&times;</a>
            <h4>{% if question.is_spam==0 %}{{ "Setting the mark"|i18n}}{% else %}{{ "Deleting the mark"|i18n}}{% endif %} "{{ "Spam"|i18n }}"</h4>
        </div>

        <div class="modal-body">
            <p>{% if question.is_spam==0 %}{{ "Mark as Spam question"|i18n }}{% else %}{{ "Delete marked as spam in question"|i18n }}{% endif %} «{{ question.question|raw|striptags }}»?</p>
        </div>
        <div class="modal-footer">
            <a href="{{ return }}" class="btn">{{ "Cancel"|i18n }}</a>
            <button class="btn btn-danger"><i class="icon-remove"></i> {{ "Yes"|i18n }}</button>
        </div>
    </form>
{% endblock content %}