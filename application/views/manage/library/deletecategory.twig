{% extends "manage/layout/manage.twig" %}
{% block content %}
<form action="" method="post">
    <input type="hidden" value="{{ token }}" name="token">
    <div class="modal-header">
        <h4>{{ "Delete"|i18n }}</h4>
    </div>
    <div class="modal-body">
        <p>{{ "Are You sure, delete"|i18n }} «{{ record.name }}»? {{ "All subcategories will be deleted"|i18n }}</p>
    </div>
    <div class="modal-footer">
        <a href="{{ cancel_url }}" class="btn btn-link">{{ "Cancel"|i18n }}</a>
        <button class="btn btn-danger"><i class="icon-remove"></i> {{ "Delete"|i18n }}</button>
    </div>
</form>
{% endblock content %}