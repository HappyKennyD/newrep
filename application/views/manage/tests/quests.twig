{% extends "manage/layout/manage.twig" %}
{% block content %}

<div class="page-header">
    <h4>{{ vk.title }} - {{ "Задачи" }}.</h4>
    <div class="pull-right">
        <a class="btn" href="{{ Url.media('manage/tests/questedit/'~vk.id) }}"><i class="icon-plus"> {{ "Добавить задачу"|i18n }}</i></a>
    </div>
    <div class="clear"></div>
</div>
<div class="page">

    {% for item in quests %}
        <div class="well well-small">
            <div class="text">
                <div class="date">
                    <span class="pull-right btn-group">
                        {% if item.published %}
                            <a class="btn btn-mini btn-warning" href="{{ Url.media('manage/tests/questpublish/'~item.id) }}"><i class="icon-eye-close"> </i> {{ "Hide"|i18n }}</a>
                        {% else %}
                            <a class="btn btn-mini btn-success" href="{{ Url.media('manage/tests/questpublish/'~item.id) }}"><i class="icon-eye-open"> </i> {{ "Unhide"|i18n }}</a>
                        {% endif %}
                        <a class="btn btn-mini" href="{{ Url.media('manage/tests/questedit/'~vk.id~'-'~item.id) }}"><i class="icon-edit"> </i> {{ "Edit"|i18n }}</a>
                        <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/tests/questdelete/'~item.id) }}"><i class="icon-remove"> </i> {{ "Delete"|i18n }}</a>
                    </span>

                    <span class="pull-right btn-group">
                        <a class="btn btn-mini" href="{{ Url.media('manage/tests/questup/'~item.id) }}"><i class="icon-arrow-up"></i></a>
                        <a class="btn btn-mini" href="{{ Url.media('manage/tests/questdown/'~item.id) }}"><i class="icon-arrow-down"></i></a>
                    </span>

                    <div>
                        {#<a href="{{ Url.site('manage/tests/variants/'~item.id) }}" style="display: inline-flex;">{{ "Question"|i18n }} {{ item.number }}.   {{ "   sadfs  " }} {{ item.quest }} </a>#}
                        <a href="{{ Url.site('manage/tests/variants/'~item.id) }}">{{ "Задача"|i18n }} {{ item.number }}. {{ item.quest|raw }}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    {{ paginate|raw }}

</div>
{% endblock content %}