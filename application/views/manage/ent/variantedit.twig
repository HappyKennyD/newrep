{% extends "manage/layout/manage.twig" %}
{% block content %}
<form action="" style="margin:0" method="post">
    <div class="modal-header">
        <h4>{{ "Edit variant"|i18n }}</h4>
    </div>
    <div class="modal-body">
        <label for="name">{{ "Variant text"|i18n }}</label>
        <textarea name="text" class="input-block-level">{% if variant is defined %}{{ variant.text }}{% endif %}</textarea>

        <input type="hidden" name="right" value="0" />
        <label for="right">{{ "Right"|i18n }}</label>
        <input type="checkbox" name="right" id="right" value="1" {% if variant is defined and variant.right == 1 %}checked="checked"{% endif %} />
    </div>
    <div class="modal-footer">
        <a href="{{ cancel_url }}" class="btn btn-link">{{ "Cancel"|i18n }}</a>
        <button class="btn btn-success"><i class="icon-ok"></i> {{ "Save"|i18n }}</button>
    </div>
</form>
{% endblock content %}