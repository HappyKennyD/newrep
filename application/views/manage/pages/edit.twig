{% extends "manage/layout/manage.twig" %}
{% block content %}
<form action="" style="margin:0" method="post">
    <div class="modal-header">
        <h4>Редактирование</h4>
    </div>
    <div class="modal-body">
        <label for="name">{{ "Название"|i18n }}</label>
        <input type="text" name="name" class="input-xxlarge" value="{{page.name}}" id="name" style="width: 98%">
        <label for="key">{{ "Ключ"|i18n }}</label>
        <input type="text" name="key" class="input-xxlarge" value="{{page.key}}" id="key" style="width: 98%" readonly>
        <label for="description">{{ "Описание (максимум 250 символов)"|i18n }}</label>
        <textarea name="description" id="description" maxlength="250" rows="4" style="width: 98%; resize: none;">{{ page.description }}</textarea>
        <input type="checkbox" name="static" value="1" id="static" class="checkbox" {% if page.static %}checked="checked"{% endif %} style="margin: 0 5px 1px 0;" />
        <label for="static" style="display: inline;" class="">Статичная страница</label>
    </div>
    <div class="modal-footer">
        <a href="{{ cancel_url }}" class="btn btn-link">Отмена</a>
        <button class="btn btn-success"><i class="icon-ok"></i> Сохранить</button>
    </div>
</form>
{% endblock content %}