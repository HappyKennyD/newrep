{% extends "manage/layout/manage.twig" %}
{% block content %}
    <div style="padding: 20px;">
        <div class="pull-right btn-group">
            <a class="btn btn-mini" href="{{ Url.media('manage/photosets/edit/'~photoset.id) }}"><i class="icon-edit"></i> {{ "Edit"|i18n }}</a>
            <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/photosets/delete/'~photoset.id) }}"><i class="icon-remove icon-white"></i> {{ "Delete"|i18n }}</a>
        </div>
        <div>
            ({{ Date.ru_date(photoset.date, 'd F Y H:i:s') }}, {{ photoset.location }})<br>
            <h4>{{ photoset.name }}</h4>
            <div class="clear"></div>
        </div>
        <div>
            <table>
            {% if attachments is defined %}
                {% for attach in attachments %}
                    <tr>
                        <td>
                            <img src="{{ Url.site(attach.photo.file_path, TRUE) }}" alt="{{ "Preview"|i18n }}" />
                            <div>{{ attach.name }}</div><br />
                        </td>
                        <td>
                            {% if not loop.first %}
                                <a class="btn btn-success btn-mini" href="{{ Url.media('manage/photosets/photoup/' ~attach.id ~ '') }}"><i class="icon-arrow-up"></i></a>
                            {% endif %}
                            {% if not loop.last %}
                                <a class="btn btn-danger btn-mini" href="{{ Url.media('manage/photosets/photodown/' ~attach.id ~ '') }}"><i class="icon-arrow-down"></i></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </table>
        </div>
        <div class="clear"></div>
    </div>
{% endblock content %}