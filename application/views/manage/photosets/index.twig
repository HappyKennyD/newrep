{% extends "manage/layout/manage.twig" %}
{% block content %}
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-success" href="{{ Url.media('manage/photosets/category') }}"><i class="icon-list"></i> {{ "All categories"|i18n }}</a>
            <a class="btn" href="{{ Url.media('manage/photosets/edit') }}"><i class="icon-plus"> {{ "Add"|i18n }}</i></a>
        </div>
        <div class="clear"></div>
    </div>
    <div class="page">
        {% for item in photosets %}
            <div class="well well-small">
                <div class="text">
                    <div class="date">

                        <span class="btn-group">
                            {% if not loop.first %}
                                <a class="btn btn-success btn-mini" href="{{ Url.media('manage/photosets/up/' ~item.id ~ '') }}"><i class="icon-arrow-up"></i></a>
                            {% endif %}
                            {% if not loop.last %}
                                <a class="btn btn-danger btn-mini" href="{{ Url.media('manage/photosets/down/' ~item.id ~ '') }}"><i class="icon-arrow-down"></i></a>
                            {% endif %}
                            {% if item.show_ru %}
                                <a class="btn btn-mini btn-success" href="{{ Url.media('manage/photosets/show_ru/'~item.id) }}">RU</a>
                            {% else %}
                                <a class="btn btn-mini btn-warning" href="{{ Url.media('manage/photosets/show_ru/'~item.id) }}">RU</a>
                            {% endif %}
                            {% if item.show_kz %}
                                <a class="btn btn-mini btn-success" href="{{ Url.media('manage/photosets/show_kz/'~item.id) }}">KZ</a>
                            {% else %}
                                <a class="btn btn-mini btn-warning" href="{{ Url.media('manage/photosets/show_kz/'~item.id) }}">KZ</a>
                            {% endif %}
                            {% if item.show_en %}
                                <a class="btn btn-mini btn-success" href="{{ Url.media('manage/photosets/show_en/'~item.id) }}">EN</a>
                            {% else %}
                                <a class="btn btn-mini btn-warning" href="{{ Url.media('manage/photosets/show_en/'~item.id) }}">EN</a>
                            {% endif %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/photosets/view/'~item.id) }}"><i class="icon-eye-open"> </i> Просмотр</a>
                            <a class="btn btn-mini" href="{{ Url.media('manage/photosets/edit/'~item.id) }}"><i class="icon-edit"> </i> Редактировать</a>
                            {% if item.published %}
                                <a class="btn btn-mini btn-warning" href="{{ Url.media('manage/photosets/published/'~item.id) }}"><i class="icon-eye-close"> </i> Скрыть</a>
                            {% else %}
                                <a class="btn btn-mini btn-success" href="{{ Url.media('manage/photosets/published/'~item.id) }}"><i class="icon-eye-open"> </i> Опубликовать</a>
                            {% endif %}
                            {% if item.is_important %}
                                <a class="btn btn-mini btn-warning" href="{{ Url.media('manage/photosets/important/'~item.id) }}"><i class="icon-eye-close"> </i> Убрать с главной</a>
                            {% else %}
                                <a class="btn btn-mini btn-success" href="{{ Url.media('manage/photosets/important/'~item.id) }}"><i class="icon-eye-open"> </i> На главную</a>
                            {% endif %}
                            <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/photosets/delete/'~item.id) }}"><i class="icon-remove"> </i> Удалить</a>
                        </span>
                        <br>({{ Date.ru_date(item.date, 'd F Y H:i:s') }}, {{ item.location }})&nbsp;
                        <a class="link" href="{{ Url.media('manage/photosets/view/'~item.id) }}">{{ item.name }}</a>
                    </div>
               </div>
            </div>
        {% endfor %}

        {{ paginate|raw }}

    </div>
{% endblock content %}