{% extends "manage/layout/manage.twig" %}
{% block content %}
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-success" href="{{ Url.media('manage/pages/new?redirect=organization') }}"><i class="icon-plus"></i> {{ "Add"|i18n }}</a>
        </div>
        <div class="clear"></div>
    </div>
    <div class="page">
        <table class="table table-striped">
             <tr>
                <td>
                    <div style="padding-left: {{ page_root.level-2 }}em">{{ page_root.name }}</div>
                </td>
                 <td></td>
            </tr>
        {% for page in pages %}
            <tr>
                <td>
                    <div style="padding-left: {{ page.level-2 }}em">
                    {% if page.static %}<i class="icon-file" style="color: darkred"></i> {% endif %}{{ page.name }}
                    </div>
                </td>
                <td>
                    <div class="btn-group pull-right">
                        <a class="btn btn-info btn-mini" href="{{ Url.media('manage/pages/up/'~page.id~'?redirect=organization') }}"><i class="icon-arrow-up"></i></a>
                        <a class="btn btn-info btn-mini" href="{{ Url.media('manage/pages/down/'~page.id~'?redirect=organization') }}"><i class="icon-arrow-down"></i></a>
                        {% if page.lvl == 4 or page.lvl == 5 %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/organization/edit/'~page.organization.id~'?page='~page.id) }}"><i class="icon-pencil"></i> Описание</a>
                            <a class="btn btn-mini" href="{{ Url.media('manage/organization/people/'~page.id) }}"><i class="icon-user"></i> Сотрудники</a>
                        {% endif %}
                        {% if page.lvl < 4 %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/pages/new/'~page.id~'?redirect=organization') }}"><i class="icon-plus"></i> Подстраница</a>
                        {% endif %}
                        <a class="btn btn-mini" href="{{ Url.media('manage/pages/edit/'~page.id~'?redirect=organization') }}"><i class="icon-edit"></i> Редактировать</a>
                        <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/pages/delete/'~page.id~'?redirect=organization') }}"><i class="icon-remove icon-white"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
{% endblock content %}