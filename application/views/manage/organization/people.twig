{% extends "manage/layout/manage.twig" %}
{% block content %}
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-success" href="{{ Url.media('manage/organization/editpeople'~'?page='~page.id) }}"><i class="icon-plus"></i> {{ "Add"|i18n }}</a>
        </div>
        Список сотрудников
        <div class="clear"></div>
    </div>
    <div class="page">
        <table class="table table-striped">
        {% for item in list %}
            <tr>
                <td>
                    <div>
                        {{ item.fio }}
                    </div>
                </td>
                <td>
                    <div class="btn-group pull-right">
                        <a class="btn btn-info btn-mini" href="{{ Url.media('manage/organization/up/' ~item.id) }}"><i class="icon-arrow-up"></i></a>
                        <a class="btn btn-info btn-mini" href="{{ Url.media('manage/organization/down/' ~item.id) }}"><i class="icon-arrow-down"></i></a>
                        <a class="btn btn-mini" href="{{ Url.media('manage/organization/editpeople/'~item.id) }}"><i class="icon-edit"></i> Редактировать</a>
                        <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/organization/delete/'~item.id) }}"><i class="icon-remove icon-white"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </table>
        {{ paginate|raw }}
    </div>
{% endblock content %}