{% extends "manage/layout/manage.twig" %}
{% block content %}
    <div class="page-header">
        <h4 style="padding-left: 20px;">{{ "Audio categories"|i18n }}</h4>
        <div class="clear"></div>
    </div>
    <div class="page">
        <table class="table table-striped">
            {% for item in cats %}
                <tr>
                    <td>
                        <div style="padding-left: {{ item.level }}em">
                            {{ item.name }}
                        </div>
                    </td>
                    <td>
                        <div class="btn-group pull-right">
                            {% if item.parent_id != 0 %}
                                <a class="btn btn-info btn-mini" href="{{ Url.media('manage/audio/upcategory/'~item.id) }}"><i class="icon-arrow-up"></i></a>
                                <a class="btn btn-info btn-mini" href="{{ Url.media('manage/audio/downcategory/'~item.id) }}"><i class="icon-arrow-down"></i></a>
                            {% endif %}
                            <a class="btn btn-mini" href="{{ Url.media('manage/audio/newcategory/'~item.id) }}"><i class="icon-plus"></i> {{ "Subcategory"|i18n }}</a>
                            <a class="btn btn-mini" href="{{ Url.media('manage/audio/editcategory/'~item.id) }}"><i class="icon-edit"></i> {{ "Edit"|i18n }}</a>
                            <a class="btn btn-mini btn-danger" href="{{ Url.media('manage/audio/deletecategory/'~item.id) }}"><i class="icon-remove icon-white"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock content %}